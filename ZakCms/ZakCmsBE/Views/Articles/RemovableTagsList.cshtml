@model ZakCms.Models.PageArticleAdminViewModel
<fieldset class="bodyWidth">
	<legend>Tags</legend>
	Click to remove:&nbsp;
	@if (Model.Tags.Count > 0)
	{
		for (int index = 0; index < Model.Tags.Count; index++)
		{
			var item = Model.Tags[index];
			@:&#39;@Html.ActionLink(item.Description, "RemoveTag", new {articleId = Model.Article.Id, tagId = item.Id})&#39;&nbsp;
		}
	}
	else
	{
		<text>No tags founded</text>
	}
</fieldset>
@using ZakCms.Models.Entitites
@model LanguageModel
@{
	var model = new LanguageModel {Code = string.Empty};
}				 
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm("Create", "Languages", FormMethod.Post))
{
	@Html.ValidationSummary(true)
	<fieldset class="bodyWidth">
		<legend>Create Language</legend>
		<p>
			<input type="submit" value="Create" />
		</p>
		<div class="editor-label">
			@Html.LabelFor(modelTemplate => model.Code)
		</div>
		<div class="editor-field">
			@Html.EditorFor(modelTemplate => model.Code)
			@Html.ValidationMessageFor(modelTemplate => model.Code)
		</div>
		<div class="editor-label">
			@Html.LabelFor(modelTemplate => model.Description)
		</div>
		<div class="editor-field">
			@Html.EditorFor(modelTemplate => model.Description)
			@Html.ValidationMessageFor(modelTemplate => model.Description)
		</div>
	</fieldset>
}
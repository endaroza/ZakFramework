@model ZakCms.Models.Entitites.FeedModel
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script type="text/javascript">
	//<!--
	function Feeds_Edit() {
		var formd = document.getElementById('adminFeedsGenerateSeoTitle');
		var forms = document.getElementById('adminFeedsEdit');
		formd["generateSeoTitleOriginal"].value = forms["Title"].value;
		formd.submit();
		return false;
	}
//-->
</script>
@using (Html.BeginForm("Edit", "Feeds", FormMethod.Post, new {name = "adminFeedsEdit", id = "adminFeedsEdit"}))
{
	@Html.ValidationSummary(true)
	<fieldset class="bodyWidth">
		<legend>Edit</legend>
		<p>
			<input type="submit" value="Save" />
			<input type="button" value="Generate Seo Title" onclick="javascript:Feeds_Edit();"/>
		</p>
		@Html.HiddenFor(model => model.Id)
		<div class="editor-label">
			@Html.LabelFor(model => model.Title)
		</div>
		<div class="editor-field">
			@Html.EditorFor(model => model.Title)
			@Html.ValidationMessageFor(model => model.Title)
		</div>
		<div class="editor-label">
			@Html.LabelFor(model => model.SeoTitle)
		</div>
		<div class="editor-field">
			@Html.EditorFor(model => model.SeoTitle)
			@Html.ValidationMessageFor(model => model.SeoTitle)
		</div>
		<div class="display-label">
			UpdateTime</div>
		<div class="display-field">
			@Html.DisplayFor(model => model.UpdateTime)
		</div>
		@Html.HiddenFor(model => model.Language.Id)
		@Html.HiddenFor(model => model.Company.Id)
	</fieldset>
}
@using (Html.BeginForm("GenerateSeoTitle", "Feeds", FormMethod.Post, new {name = "adminFeedsGenerateSeoTitle", id = "adminFeedsGenerateSeoTitle"}))
{
	<input id="generateSeoTitleOriginal" name="generateSeoTitleOriginal" type="hidden" value="" />
	@Html.HiddenFor(model => model.Id)
}
@using ZakCms.Models.Entitites
@model FeedModel
@{
	var model = new FeedModel {Language = new LanguageModel(Model.Language.Id)};
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Create", "Feeds", FormMethod.Post))
{
	@Html.ValidationSummary(true)
	<fieldset class="bodyWidth">
		<legend>Create Feed</legend>
		<p>
			<input type="submit" value="Create" />
		</p>
		<div class="editor-label">
			@Html.LabelFor(modelTemplate => model.Title)
		</div>
		<div class="editor-field">
			@Html.EditorFor(modelTemplate => model.Title)
			@Html.ValidationMessageFor(modelTemplate => model.Title)
		</div>
		<div class="editor-label">
			@Html.LabelFor(modelTemplate => model.UpdateTime)
		</div>
		<div class="display-field">
			@Html.DisplayFor(modelTemplate => model.UpdateTime)
		</div>
		<div class="display-label">
			Language</div>
		<div class="display-field">
			@Html.HiddenFor(modelTemplate => model.Language.Id)
			@Html.DisplayFor(modelTemplate => model.Language.Description)
		</div>
		@Html.HiddenFor(modelTemplate => model.Company.Id)
	</fieldset>
}
<!DOCTYPE html>
<html>
	<head>
		<title>ZakCms BackEnd</title>
		<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
		<script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
	</head>
	<body>
		<div class="page">
			<div id="header">
				<div id="title">
					<h3>
						My MVC Application - BackEnd</h3>
				</div>
				<div id="logindisplay">
					@Html.Partial("_LogOnPartial")
				</div>
				@if (Request.IsAuthenticated)
				{
					<div id="menucontainer">
						<ul id="menu">
							<li>@Html.ActionLink("About", "About", "Home")</li>
							<li>@Html.ActionLink("Articles", "Index", "Articles", new {id = 0}, null)</li>
							<li>@Html.ActionLink("Languages", "Index", "Languages", new {id = 0}, null)</li>
							<li>@Html.ActionLink("Companies", "Index", "Companies", new {id = 0}, null)</li>
							<li>@Html.ActionLink("BE Users", "Index", "BEUsers", new {id = 0}, null)</li>
							<li>@Html.ActionLink("FE Users", "Index", "FEUsers", new {id = 0}, null)</li>
							<li>@Html.ActionLink("Feeds", "Index", "Feeds", new {id = 0}, null)</li>
							<li>@Html.ActionLink("Tags", "Index", "Tags", new {id = 0}, null)</li>
						</ul>
					</div>
				}
				else
				{
					<div id="menucontainer">
						<ul id="menu">
							<li>@Html.ActionLink("Home", "Index", "Home")</li>
							<li>@Html.ActionLink("About", "About", "Home")</li>
						</ul>
					</div>
				}
			</div>
			<div id="main">
				@RenderBody()
			</div>
			<div id="footer">
			</div>
		</div>
	</body>
</html>